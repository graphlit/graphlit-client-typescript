{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext", // ESM output
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": ["ES2022", "esnext.intl"]
  },
  "include": ["src/**/*"]
}
